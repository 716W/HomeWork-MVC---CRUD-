@using HomeWork.Models
@model Student

@{
    ViewData["Title"] = "Delete Student";
}

<h2>Delete Student</h2>

<div>
    <h4>Student Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dt class="col-sm-2">@Model.FirstName @Model.LastName</dt>
        <hr />

        <dt class="col-sm-2">Age</dt>
        <dt class="col-sm-2">@Model.Age</dt>
        <hr />

        <dt class="col-sm-2">Email</dt>
        <dt class="col-sm-2">@Model.Email</dt>
        <hr />

        <dt class="col-sm-2">Major</dt>
        <dt class="col-sm-2">@Model.MajorName</dt>
        <hr />

        <dt class="col-sm-2">GPA</dt>
        <dt class="col-sm-2">@Model.GPA</dt>
        <hr />
    </dl>
</div>

<!-- Confirmation Box -->
<div class="card mt-4">
    <div class="card-body">
        <h4 class="text-center">Are you sure you want to delete this student?</h4>
        <div class="text-center mt-3">
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
            </form>
        </div>
    </div>
</div>
