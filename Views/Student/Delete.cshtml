@using HomeWork.Models
@model Student

@{
    ViewData["Title"] = "Delete Student";
}

<h2>Delete Student</h2>

<div>
    <h4>Student Details</h4>
    <hr />
    <div class="row mb-3">

        <div class="col-sm-2"><strong>Id: </strong></div>
        <div class="col-sm-4">@Model.Id</div>

        <div class="col-sm-2"><strong>Name: </strong></div>
        <div class="col-sm-4">@Model.FirstName @Model.LastName</div>

    </div>
    <div class="row mb-3">

        <div class="col-sm-2"><strong>Age: </strong></div>
        <div class="col-sm-4">@Model.Age</div>

        <div class="col-sm-2"><strong>Email: </strong></div>
        <div class="col-sm-4">@Model.Email</div>

    </div>
    <div class="row mb-3">
        <div class="col-sm-2"><strong>Major: </strong></div>
        <div class="col-sm-4">@Model.MajorName</div>

        <div class="col-sm-2"><strong>GPA: </strong></div>
        <div class="col-sm-4">@Model.GPA</div>
    </div>
    <div class="row mb-3">
        <div class="col-sm-2"><strong>Address: </strong></div>
        <div class="col-sm-4">@Model.Address</div>

        <div class="col-sm-2"><strong>Phone Number: </strong></div>
        <div class="col-sm-4">@Model.PhoneNumber</div>
    </div>
</div>

<!-- Confirmation Box -->
<div class="card mt-4">
    <div class="card-body">
        <h4 class="text-center">Are you sure you want to delete this student?</h4>
        <div class="text-center mt-3">
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
            </form>
        </div>
    </div>
</div>
